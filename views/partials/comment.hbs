


    <div class="comments clearfix">
        <ul id="comments-ul">
           {{# each comments}}
                <li class="clearfix">
                    <div class="comments-box clearfix">
                        <div class="comment-avatar">
                            <img data-original="{{authorProfileImageUrl}}" alt="{{authorDisplayName}}" class="lazy comnt_pic" src="{{authorProfileImageUrl}}" style="display: block;">
                        </div>
                        <div class="comment-info">
                            <div class="clearfix">
                                <a href="#">
                                    <strong class="comment-creator">
                                        {{authorDisplayName}}
                                      
                                    </strong>
                                </a>
                            </div>
                            {{textDisplay}}
                        
                           
                            {{# if this.replies}}
                                <div class="com-info-actions clearfix">
                                    <div class="reply">
                                        <ul id="comments-ul" style="padding-left:0">
                                           {{#each replies}}
                                                <p></p>
                                                <li class="clearfix">
                                                    <div class="comment-avatar">
                                                        
                                                        <img data-original="{{authorProfileImageUrl}}" class="lazy comnt_pic" alt="{{authorDisplayName}}" src="{{authorProfileImageUrl}}" style="display: block;">
                                                    </div>
                                                    <div class="comment-info">
                                                        <div class="clearfix">
                                                            <a>
                                                                <strong>{{authorDisplayName}} </strong>
                                                            </a>&nbsp;
                                                           
                                                            {{textDisplay}} 
                                                           
                                                        </div>
                                                    </div>
                                                </li>
                                                <p></p>
                                             {{/each}}

                                        </ul>
                                    </div>
                                </div>


                          {{/if}}

                        </div>
                    </div>
                </li>
            {{/each}}


        </ul>
    </div>

